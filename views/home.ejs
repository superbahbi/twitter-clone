            <button type="button" name="button" class="btn btn btn-primary"><i class="fas fa-poll-h"></i></button>
            <button type="button" name="button" class="btn btn btn-primary"><i class="far fa-smile"></i></button>
            <button class="btn btn-primary float-right" type="submit" name="button">Tweet</button>
          </div>
        </div>
      </div>
    </form>

    <div class="">

    </div>
